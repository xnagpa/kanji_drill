.slider__header
  text-align right
  position relative
  z-index 9

.slider__header h1
  text-transform uppercase
  font-size 1.1rem
  position relative
  bottom -10px
  right 20px
  color gray


.slider__header h1::after
  background-color #1a1a1a
  z-index -1
  display block
  content ''
  width 20%
  height 28px
  position absolute
  bottom -8px
  right -7px
  -webkit-transform skew(45deg)
  transform skew(45deg)
