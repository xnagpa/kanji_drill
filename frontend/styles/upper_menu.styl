.nav
    background-color white
    text-align left
    font-family Helvetica, Arial, sans-serif
    font-size 12px
    padding 43px 0
    float left
    &:after {
              display: block
              clear: both
            }

.nav-container
    position relative
    box-shadow 0 2px 4px #000000
    height 100px

.nav__ul
    margin-left 130px

.nav__ul__li
    display inline
    margin-right 40px
    color #8091A5
    padding-bottom 37px
    text-transform uppercase
    &:hover {
              border-bottom: 6px solid #0099FA 
            }


